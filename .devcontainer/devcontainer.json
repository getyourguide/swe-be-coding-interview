{
  "name": "GetYourGuide Backend Interview - Java 21 + Spring Boot",
  "image": "mcr.microsoft.com/devcontainers/java:21-jdk-bullseye",
  
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-java-debug",
        "vmware.vscode-boot-dev-pack",
        "gabrielbb.vscode-lombok",
        "vscjava.vscode-gradle",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "spring-boot.ls.checkjvm": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "java.debug.settings.enableRunDebugCodeLens": true,
        "java.debug.logLevel": "FINE",
        "debug.allowBreakpointsEverywhere": true,
        "debug.openDebug": "neverOpen"
      }
    }
  },

  "forwardPorts": [8080, 5005],
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot Application",
      "onAutoForward": "notify"
    },
    "5005": {
      "label": "Java Debug Port",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "chmod +x ./gradlew && ./gradlew build --no-daemon --parallel",
  "postStartCommand": "echo 'Codespace ready! Run ./gradlew bootRun to start the application'",

  "remoteUser": "vscode",
  
  "containerEnv": {
    "JAVA_TOOL_OPTIONS": "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"
  },
  
  "init": true,
  "privileged": false,
  "overrideCommand": false
} 