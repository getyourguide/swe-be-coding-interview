{
  "name": "GetYourGuide Backend Interview - Java 21 + Spring Boot",
  "image": "mcr.microsoft.com/devcontainers/java:21-jdk-bullseye",

  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack",
        "gabrielbb.vscode-lombok",
        "vscjava.vscode-gradle",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.atom-keybindings"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "spring-boot.ls.checkjvm": false,
        "terminal.integrated.defaultProfile.linux": "bash",
        "debug.allowBreakpointsEverywhere": true
      }
    }
  },

  "forwardPorts": [8080, 5005],
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot Application",
      "onAutoForward": "notify"
    },
    "5005": {
      "label": "Debugger",
      "onAutoForward": "openBrowser"
    }
  },

  "postCreateCommand": "chmod +x ./gradlew && ./gradlew build --no-daemon --parallel",
  "postStartCommand": "echo 'Codespace ready! Run ./gradlew bootRun to start the application'",

  "remoteUser": "vscode",

  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",

  "containerEnv": {
    "JAVA_TOOL_OPTIONS": "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"
  }
}
