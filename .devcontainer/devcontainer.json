{
  "name": "GetYourGuide Backend Interview - Java 21 + Spring Boot",
  "image": "mcr.microsoft.com/devcontainers/java:21-jdk-bullseye",
  
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "vmware.vscode-boot-dev-pack"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "debug.allowBreakpointsEverywhere": true
      }
    }
  },

  "forwardPorts": [8080, 5005],
  "portsAttributes": {
    "8080": {
      "label": "Spring Boot Application",
      "onAutoForward": "notify"
    },
    "5005": {
      "label": "Java Debug Port",
      "onAutoForward": "silent"
    }
  },

  "containerEnv": {
    "JAVA_TOOL_OPTIONS": "-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005"
  },

  "postCreateCommand": "chmod +x ./gradlew",
  "postStartCommand": "echo 'Codespace ready! Run ./gradlew bootRun to start the application'",
  
  "remoteUser": "vscode"
} 